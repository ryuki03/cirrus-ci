#!/bin/bash

cd /tmp/rom

#sync
repo init -q --no-repo-verify --depth=1 -u git://github.com/DerpFest-11/manifest.git -b 11 -g default,-device,-mips,-darwin,-notdefault
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j8

git clone --depth=1 https://github.com/indraadp/device_xiaomi_juice -b derpfest-os device/xiaomi/juice
git clone --depth=1 https://github.com/indraadp/prebuilt_vendor_juice --single-branch -b A11 vendor/xiaomi/juice
git clone --depth=1 https://github.com/indraadp/stormbreaker_kernel_juice  --single-branch -b test kernel/xiaomi/juice
rm -rf prebuilts/gcc/linux-x86/aarch64/aarch64-elf && git clone https://github.com/MiBengal-Development/arm64-gcc-11 prebuilts/gcc/linux-x86/aarch64/aarch64-elf
rm -rf device/generic

clear
cd /tmp/rom

#build
. build/envsetup.sh
lunch derp_juice-userdebug
export CCACHE_DIR=/tmp/ccache
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 20G
ccache -o compression=true
ccache -z

#mka derp -j8 &
#sleep 90m
#kill %1
#ccache -s

mka derp -j8
