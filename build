#!/bin/bash

cd /tmp/rom

# repo init
repo init -q --no-repo-verify --depth=1 -u https://github.com/PotatoProject/manifest -b dumaloo->

# Sync
repo sync -c -j$(nproc --all)  --no-clone-bundle --no-tags --optimized-fetch --prune --force-syn>

git clone --depth=1 https://github.com/ryuKizuha/xiaomi_device_jui --single-branch -b posp devic>
git clone --depth=1 https://github.com/I-n-o-k/prebuilt_vendor_juice --single-branch -b 11 vendo>
git clone --depth=1 https://github.com/MiBengal-Development/android_kernel_xiaomi_bengal  --sing>
rm -rf prebuilts/gcc/linux-x86/aarch64/aarch64-elf && git clone https://github.com/MiBengal-Deve>
rm -rf device/generic

clear
cd /tmp/rom

# building posp
source build/envsetup.sh
lunch potato_juice-userdebug
export CCACHE_DIR=/tmp/ccache
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 20G
ccache -o compression=true
ccache -z

brunch potato_juice-userdebug &
sleep 90m
kill %1
ccache -s

# brunch potato_juice-userdebug
